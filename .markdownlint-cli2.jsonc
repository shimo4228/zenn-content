// markdownlint-cli2 configuration for Zenn articles
{
  "config": {
    // Allow HTML for Zenn-specific elements (details, summary, etc.)
    "MD033": {
      "allowed_elements": ["details", "summary", "br", "sup", "sub"]
    },
    // Zenn uses frontmatter title as H1, so body H1 (#) is normal
    "MD025": false,
    // Allow duplicate headings in different sections
    "MD024": {
      "siblings_only": true
    },
    // Allow longer lines (Zenn articles often have long Japanese text)
    "MD013": false,
    // Allow trailing punctuation in headings (Japanese: 。？！)
    "MD026": {
      "punctuation": ".,;:!"
    },
    // Allow multiple blank lines (common in article formatting)
    "MD012": {
      "maximum": 2
    },
    // Disable first-line heading requirement (Zenn uses frontmatter)
    "MD041": false,
    // Disable table column style (Zenn tables use compact style)
    "MD060": false,
    // Zenn uses bare URLs on their own line for rich embeds (YouTube, Spotify, etc.)
    "MD034": false,
    // Zenn articles use bold text as sub-headings to avoid TOC pollution
    "MD036": false,
    // Shell prompt indicator ($) is conventional in Zenn bash code blocks
    "MD014": false,
    // Allow non-standard heading style
    "MD003": {
      "style": "atx"
    }
  },
  // Ignore Zenn-specific syntax blocks (:::message, :::details)
  "customRules": [],
  "ignores": [
    "node_modules",
    "drafts",
    ".zenn"
  ]
}
