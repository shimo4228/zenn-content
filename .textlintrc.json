{
  "rules": {
    "preset-ja-technical-writing": {
      "no-exclamation-question-mark": false,
      "max-kanji-continuous-len": {
        "max": 6,
        "allow": ["機械学習", "深層学習", "自然言語処理"]
      }
    },
    "no-dead-link": {
      "checkRelative": true,
      "baseURI": null,
      "ignore": [
        "https://localhost*",
        "https://qiita.com/shimo4228/items/743f2b43f63b2bbe2dba"
      ],
      "preferGET": [],
      "retry": 3,
      "userAgent": "textlint-rule-no-dead-link/1.0"
    },
    "prh": {
      "rulePaths": ["prh.yml"]
    }
  }
}
